#!/bin/bash

set -e

# sudo apt update
# sudo apt docker-compose-plugin

COMPOSE="$(cd $(dirname $0); pwd -P)/docker-compose.yaml"
CONTAINER_NAME=""
PROJECT=""
TAG=${1:-latest}
VOLUMES=("/mnt/docker/${PROJECT}/${TAG}/..")

if [ $EUID != 0 ]; then
  echo "Run with root permission"
  exit 0
fi

if [ -z "$(command -v docker)" ]; then
  echo "You need to install docker"
fi

for volume in ${VOLUMES[@]}; do
  if [ ! -d ${volume} ]; then
    mkdir -p ${volume}
  fi
done

if [ -e ${COMPOSE} ]; then
  cat ${COMPOSE} > ${COMPOSE}.old
  cat <<__EOF > ${COMPOSE}
version: '3'

services:
  ${PROJECT}:
    image: how2flow/${PROJECT}:${TAG}
    container_name: ${CONTAINER_NAME}
    stdin_open: true
    tty: true
    volumes:
      - /mnt/docker/${PROJECT}/${TAG}/..
__EOF

docker compose up -d
fi

